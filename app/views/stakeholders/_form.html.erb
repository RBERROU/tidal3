<%= form_with model: @stakeholder, local: true, data: { turbo: false } do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :role %>
    <%= form.text_field :role, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :category %>
    <%= form.select :category, options_for_select(['Internal', 'External within the Value Chain', 'External exterior to the Value Chain']), { prompt: "Select Category" }, { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= form.label :subcategory %>
    <%= form.select :subcategory, options_for_select(['Employee', 'Management', 'Executives', 'Client', 'Supplier', 'NGOs', 'Research Institutes']), { prompt: "Select Subcategory" }, { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= form.label :challenges, "Sustainability Challenges" %>
    <%= form.collection_select :challenge_ids, Challenge.all, :id, :name, {}, { multiple: true, class: 'form-control' } %>
  </div>
  
  <%= form.submit form.object.new_record? ? 'Create Stakeholder' : 'Update Stakeholder', class: 'btn btn-primary' %>
<% end %>
